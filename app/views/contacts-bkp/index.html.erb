<%= form_tag contacts_path, method: :get, class: 'form-inline float-right' do %>
  <div class="form-group mx-sm-3 mb-2">
    <%= text_field_tag :q, params[:q], placeholder: 'Name or Mobile/Landline', class: "form-control" %>
    <%= button_tag :Search, class: 'btn btn-primary ml-2' %>
  </div>
<% end %>

<table class="table">
  <thead class="thead-light">
  <tr>
    <th scope="col">
      <%=
        link_to "First Name", contacts_path(sort: 'first_name', direction: (params[:direction] == 'asc' ? 'desc' : 'asc'))
      %>
    </th>
    <th scope="col">
      <%=
        link_to "Last Name", contacts_path(sort: 'last_name', direction: (params[:direction] == 'asc' ? 'desc' : 'asc'))
      %>
    </th>
    </th>
    <th scope="col">
      <%=
        link_to "Created at", contacts_path(sort: 'created_at', direction: (params[:direction] == 'asc' ? 'desc' : 'asc'))
      %>
    </th>
    <th scope="col">View count</th>
  </tr>
  </thead>
  <tbody>
    <%= render partial: "contact", collection: @contacts %>
  </tbody>
</table>