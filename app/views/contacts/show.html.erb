<div class="media my-3 bg-light">
  <div class="media-body my-3 mx-3">
    <h5 class="mt-0 mb-1"><%= @contact.first_name %></h5>
    <p><%= mail_to @contact.email %></p>
    <p>Mobile: <%= @contact.mobile.presence || '-' %></p>
    <p>Landline: <%= @contact.landline.presence || '-' %></p>
    <p>Created at: <%= @contact.created_at.strftime "%F %T" %></p>
    <p>Updated at: <%= @contact.updated_at.strftime "%F %T" %></p>
    <p>Notes:</p>
    <%= @contact.notes %>
    <br />
    <br />

  </div>
  <% if @contact.avatar.attached? %>
    <%= image_tag @contact.avatar, width: "15%", height: "15%", class: "rounded ml-3 my-3 mx-3" %>
  <% else %>
    <%= image_tag "default-avatar-profile-icon-grey.jpg", width: "15%", height: "15%", class: "rounded-circle ml-3 my-3 mx-3" %>
  <% end %>
</div>

<%= line_chart @chartkick_data %>

<%= link_to 'Edit', edit_contact_path(@contact) %> |
<%= link_to 'Destroy', contact_path(@contact), method: :delete %> |
<%= link_to 'Back', contacts_path %>

